<%
  rotate = properties.ping_node.logrotate && properties.ping_node.logrotate.rotate
  size = properties.ping_node.logrotate && properties.ping_node.logrotate.size
%>
/var/vcap/data/sys/service-log/*.log /var/vcap/data/sys/service-log/*/*.log /var/vcap/data/sys/service-log/*/*/*.log {
  missingok
  rotate <%= rotate || 3 %>
  compress
  delaycompress
  copytruncate
  size=<%= size || "50k" %>
}
